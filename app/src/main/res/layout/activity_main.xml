<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kerrel.shapesample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_circle_round_red"
            android:gravity="center"
            android:text="Hello World!"
            android:textColor="#FFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_circle_round_gray"
            android:gravity="center"
            android:text="Hello World!"
            android:textColor="#FFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/minwon"
            android:layout_width="28dp"
            android:layout_height="15dp"
            android:layout_margin="8dp"
            android:background="@drawable/shape_round_blue"
            android:gravity="center"
            android:text="민원"
            android:textColor="#6595d5"
            android:textSize="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jajae"
            android:layout_width="28dp"
            android:layout_height="15dp"
            android:layout_margin="8dp"
            android:background="@drawable/shape_round_purple"
            android:gravity="center"
            android:text="민원"
            android:textColor="#a286d6"
            android:textSize="8dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

</LinearLayout>
